{
  "name": "Imgur Açıcı",
  "version": "0.1.0",
  "manifest_version": 2,
  "description": "Imgur kaynaklı görsellerin görüntülenebilmesini sağlayan bir eklenti.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": ["js/redirect.js"]
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://*.imgur.com/"
  ]
}